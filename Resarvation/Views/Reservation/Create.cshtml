@if (User.Identity.IsAuthenticated)
{
    if (SignInManager.IsSignedIn(User))
    {

        <h1>Create</h1>

        <h4>ReservApprenantViewModel</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input readonly asp-for="@User.Identity.Name" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date" class="control-label"></label>
                        <input asp-for="Date" required class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>


                    @if (User.IsInRole("admin"))
                    {
                        <div class="form-group">
                            <label asp-for="Status" class="control-label"></label>
                            <input asp-for="Status" class="form-control" />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    }
                    @if (User.IsInRole("apprenant"))
                    {

                        <div class="form-group d-none">
                            <label asp-for="Status" class="control-label"></label>
                            <input asp-for="Status" class="form-control d-none" />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    }
                    <div class="form-group">
                        <label asp-for="Cause" class="control-label"></label>
                        <input asp-for="Cause" required class="form-control" />
                        <span asp-validation-for="Cause" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TypeReservationId" class="control-label"></label>
                        <select asp-for="TypeReservationId" required="required" asp-items="@ViewBag.type" class="form-control custom-select">
                            <option disabled selected>- Reservation Type -</option>
                        </select>
                        <span asp-validation-for="TypeReservationId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>




    }


}
